@model dotnetcore_test.Models.IndexModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <form asp-controller="Home" asp-action="Index" method="POST">
        <div class="form-group row">
            <label for="oldUrl" class="col-sm-2 col-form-label">Old Url</label>
            <div class="col-sm-10">
                <input asp-for="OldUrl" type="url" class="form-control" placeholder="http://">
            </div>
        </div>
        <div class="form-group row">
            <label for="newUrl" class="col-sm-2 col-form-label">New Url</label>
            <div class="col-sm-10">
                <input asp-for="NewUrl" type="url" class="form-control" placeholder="https://">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Compare</button>
    </form>
</div>
